# --- CONFIGURACIÓN GENERAL ---
# Define el secreto para firmar los tokens JWT (Debe ser largo y seguro)
JWT_SECRET=cambiar_por_un_secreto_seguro_base64_preferiblemente

# --- BASE DE DATOS (URLs de Conexión) ---
# En local usamos localhost. En Railway usarás las variables que te provee el servicio de MySQL.
AUTH_DB_URL=jdbc:mysql://localhost:3306/ddsi_user_manager?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC&createDatabaseIfNotExist=true
AGREGADOR_DB_URL=jdbc:mysql://localhost:3306/ddsi_agregador?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC&createDatabaseIfNotExist=true
ESTADISTICAS_DB_URL=jdbc:mysql://localhost:3306/ddsi_estadisticas?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC&createDatabaseIfNotExist=true
FUENTE_DINAMICA_DB_URL=jdbc:mysql://localhost:3306/ddsi_fuente_dinamica?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC&createDatabaseIfNotExist=true
FUENTE_ESTATICA_DB_URL=jdbc:mysql://localhost:3306/ddsi_fuente_estatica?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC&createDatabaseIfNotExist=true

# Credenciales de BD (Por defecto root vacio en local)
DB_USERNAME=root
DB_PASSWORD=

# --- OAUTH 2.0 (Google & Github) ---
# Necesarios para el login social en el módulo SSR
GOOGLE_CLIENT_ID=tu_google_client_id
GOOGLE_CLIENT_SECRET=tu_google_client_secret
GITHUB_CLIENT_ID=tu_github_client_id
GITHUB_CLIENT_SECRET=tu_github_client_secret

# --- APIs EXTERNAS ---
# API Key para GeoApify (Módulo Agregador)
GEOAPIFY_KEY=tu_api_key

# Credenciales para la API Proxy (Módulo Fuente Proxy)
PROXY_API_EMAIL=email_api_catedra
PROXY_API_PASSWORD=password_api_catedra

# --- URLs DE SERVICIOS (Service Discovery manual) ---
# IMPORTANTE: En Railway, cambiar esto por las URLs internas (ej: http://auth-manager:6020) o las públicas.
# Estas variables controlan a dónde apuntan los servicios entre sí.

AUTH_SERVICE_URL=http://localhost:6020/auth
AGREGADOR_SERVICE_URL=http://localhost:5010
ESTADISTICAS_SERVICE_URL=http://localhost:4020/api/estadisticas
# Base URL del servicio Fuente Dinamica (Sin /api)
FUENTE_DINAMICA_SERVICE_URL=http://localhost:4040
# Base URL del servicio Fuente Estatica (Sin /api)
FUENTE_ESTATICA_SERVICE_URL=http://localhost:4080
# Base API URL del Proxy
FUENTE_PROXY_API_URL=http://localhost:7080/api

# GraphQL URL (Generalmente en el agregador)
GRAPHQL_CLIENT_URL=http://localhost:5010/graphql

# --- CONFIGURACIÓN MULTIMEDIA ---
# URL Base publica para acceder a archivos subidos (Fuente Dinamica)
# En local es localhost, en prod será tu dominio (ej: https://dinamica.up.railway.app)
APP_MULTIMEDIA_BASE_URL=http://localhost:4040
